runtime: python313

# Variables de entorno (configurar con tus API keys reales)
env_variables:
  API_HOST: "0.0.0.0"
  API_PORT: "8080"
  API_ENV: "production"
  # IMPORTANTE: Agregar tus API keys aquí o usar Secret Manager
  OPENROUTER_API_KEY: "tu-openrouter-api-key-aqui"
  # GOOGLE_API_KEY: "tu-google-api-key-aqui"

# Configuración de instancia
instance_class: F2

# Configuración de escalado automático
automatic_scaling:
  target_cpu_utilization: 0.65
  min_instances: 0
  max_instances: 5
  min_idle_instances: 0
  max_idle_instances: 1

# Handlers para archivos estáticos
handlers:
- url: /static
  static_dir: WEB
  secure: always

- url: /.*
  script: auto
  secure: always

# Configuración de recursos
resources:
  cpu: 1
  memory_gb: 2
  disk_size_gb: 10

# Configuración de salud
liveness_check:
  path: "/health"
  check_interval_sec: 30
  timeout_sec: 4
  failure_threshold: 2
  success_threshold: 2

readiness_check:
  path: "/health"
  check_interval_sec: 5
  timeout_sec: 4
  failure_threshold: 2
  success_threshold: 2
  app_start_timeout_sec: 300

# Entrypoint personalizado
entrypoint: python API/server.py
